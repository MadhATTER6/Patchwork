extends layout

block head
    script(src="/scripts/room.js")
    if admin
      script(src="/scripts/room_admin.js")
    else
      script(src="/scripts/room_user.js")
    link(href="/stylesheets/room.css" rel="stylesheet") 
    script.
      var room = "#{room}";
      var host = "#{host}";
    title= "Influx: " + room

block main
  .page-header.col-md-8.col-md-offset-2
    h2= "Room: " + room
      if admin
        .btn-group.pull-right
          button#close.btn.btn-danger(type="button") Close Room
  .col-md-4.col-md-offset-4
    ul.list-group
        li.list-group-item N/A
        li.list-group-item Also N/A
    .input-group
      span.input-group-btn
        span.btn.btn-default.btn-file
          | Browse...
          input#song-file(type="file")
      input#song-disp.form-control(type="text" readonly)
      span.input-group-btn
        button#add-song.btn.btn-primary
          span.glyphicon.glyphicon-plus
